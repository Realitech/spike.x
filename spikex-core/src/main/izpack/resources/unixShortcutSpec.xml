<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
    <programGroup defaultName="spikex" location="applications"/>

    <shortcut
            name="Spike.x User Guide"
            programGroup="yes"
            desktop="no"
            applications="yes"
            startMenu="no"
            startup="no"
            target="/usr/bin/firefox"
            commandLine="&quot;$INSTALL_PATH/spikex/docs/asciidoc/userguide-main.html&quot;"
            initialState="maximized"
            iconFile="help"
            iconIndex="0"
            workingDirectory=""
            type="Application"
            encoding="UTF-8"
            KdeSubstUID="true"
            KdeUsername="root"
            createForAll="false"
            Categories="Application;Development;"
            description="Spike.x @spikex.version@ User Guide">
    </shortcut>

    <shortcut
            name="Spike.x Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="yes"
            startMenu="no"
            startup="no"
            target="/usr/bin/java"
            commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
            initialState="noShow"
            iconFile="trashcan_full"
            iconIndex="0"
            workingDirectory=""
            type="Application"
            encoding="UTF-8"
            KdeSubstUID="true"
            KdeUsername="root"
            createForAll="false"
            Categories="Application;Development;"
            description="This uninstalls Spike.x">
    </shortcut>
</shortcuts>
